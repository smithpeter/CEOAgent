# CEOAgent 服务器环境配置示例
# 复制此文件为 .env 并填写实际值

# 环境配置
ENVIRONMENT=production
LOG_LEVEL=INFO

# 数据库配置
DATABASE_URL=postgresql://ceoagent:your_password@postgres:5432/ceoagent
POSTGRES_USER=ceoagent
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=ceoagent

# Redis 配置
REDIS_URL=redis://redis:6379/0

# Weaviate 向量数据库配置
WEAVIATE_URL=http://weaviate:8080

# AI API 配置
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://your-domain.com

# 日志配置
LOG_DIR=/opt/ceoagent/logs

# 性能配置
WORKERS=4
MAX_WORKERS=10

# ========== API 调用限制配置 ==========

# 应用层速率限制（每分钟请求数）
RATE_LIMIT_PER_MINUTE=10

# Claude API 重试配置
CLAUDE_MAX_RETRIES=3
CLAUDE_RETRY_BASE_DELAY=1.0
CLAUDE_RETRY_MAX_DELAY=60.0
CLAUDE_REQUEST_TIMEOUT=120

# Claude API 速率限制
CLAUDE_MAX_REQUESTS_PER_MINUTE=50
CLAUDE_MAX_CONCURRENT_REQUESTS=5

# Token Bucket 配置
TOKEN_BUCKET_RATE=10
TOKEN_BUCKET_CAPACITY=100
