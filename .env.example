# CEOAgent Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Claude API Configuration
# =============================================================================

# Your Anthropic API Key (get it from https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# Claude Model (recommended: claude-3-5-sonnet-20241022)
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment (development, staging, production)
APP_ENV=development

# API Host and Port
API_HOST=0.0.0.0
API_PORT=8000

# Debug Mode (set to false in production)
DEBUG=true

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL: Rate Limiting
# =============================================================================

# Max requests per minute per user (default: 10)
RATE_LIMIT_PER_MINUTE=10

# Max tokens per request (default: 4096)
MAX_TOKENS_PER_REQUEST=4096

# =============================================================================
# PHASE 2+: Database Configuration (not needed for MVP)
# =============================================================================

# PostgreSQL (Phase 2)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ceoagent

# Redis (Phase 2)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# PHASE 3+: Vector Database (not needed for MVP)
# =============================================================================

# Weaviate (Phase 3)
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=

# Voyage AI for embeddings (Phase 3)
# VOYAGE_API_KEY=
