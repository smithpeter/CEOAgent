apiVersion: v1
kind: Secret
metadata:
  name: ceoagent-secrets
type: Opaque
stringData:
  database-url: "postgresql://user:password@postgres-service:5432/ceoagent"
  anthropic-api-key: "sk-ant-api03-..."
  encryption-key: "..."
# 注意：实际使用时，不要将密钥直接写入文件
# 使用 kubectl create secret 命令创建：
# kubectl create secret generic ceoagent-secrets \
#   --from-literal=database-url='postgresql://...' \
#   --from-literal=anthropic-api-key='sk-ant-...' \
#   --from-literal=encryption-key='...'
